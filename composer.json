{
    "name": "sy-records/thrift2-hbase",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "hbase",
        "aliyun"
    ],
    "description": "thrift for ali hbase+",
    "authors": [
        {
            "name": "Luffy",
            "email": "52o@qq52o.cn",
            "homepage": "https://qq52o.me"
        },
        {
            "name": "zzss-utils",
            "email": "823842209@qq.com",
            "homepage": "https://github.com/zzss-utils"
        }
    ],
    "autoload": {
        "psr-4": {
            "Luffy\\AliHbaseThrift\\": "src/",
            "Thrift\\": "src/Thrift/",
            "Luffy\\Thrift2Hbase\\": "src/Thrift2Hbase/",
            "Luffy\\AliHbaseThrift\\Serivce\\": "src/Service/"
        }
    },
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9"
    },
    "suggest": {
        "hyperf/contract": "The contracts of Hyperf.",
        "hyperf/utils": "A tools package that could help developer solved the problem quickly.",
        "psr/container": "Common Container Interface (PHP FIG PSR-11)"
    },
    "extra": {
        "hyperf": {
            "config": "Luffy\\AliHbaseThrift\\ConfigProvider"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    }
}